<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%=dienthoai.name%></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="shortcut icon" href="/images/favicon.ico">


</head>

<body>
    <%- include('header'); -%>
    <!-- xem sản phẩm-->
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li><a href="/">Trang chủ</a></li>
                            <li><a href="/dienthoai">Điện thoại</a></li>
                            <li><a href="/dienthoai/<%=dienthoai.phone_id%>"><%=dienthoai.name%></a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container content" style="background-color: #fff;">
        <div class="row info-san-pham">
            <div class="col-sm-5">
                <img src="<%=dienthoai.hinh_anh%>" alt="">
            </div>
            <div class="col-sm-7">
                <h3 class="ten-san-pham">
                    <%=dienthoai.name%>
                </h3>
                <div class="gia-tien">
                    <%=dienthoai.gia_hien_thi%>
                </div>
                <div class="promotion">
                    <small><%=dienthoai.promotion%></small>
                </div>
                <a href="/giohang/add/<%=dienthoai.phone_id%>" class="btn btn-success">Thêm vào giỏ hàng</a>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-xs-12 hidden-lg">
                <h3 class="bar-xanh">Thông số kĩ thuật</h3>
                <table class="table">
                    <tbody>
                        <tr>
                            <td style="color: black;white-space: nowrap;">Màn hình</td>
                            <td><%=dienthoai.man_hinh%></td>
                        </tr>
                        <tr>
                            <td style="color: black;white-space: nowrap;">Hệ điều hành</td>
                            <td><%=dienthoai.he_dieu_hanh%></td>
                        </tr>
                        <tr>
                            <td style="color: black;">Camera sau</td>
                            <td><%=dienthoai.camera_sau%></td>
                        </tr>
                        <tr>
                            <td style="color: black;">Camera trước</td>
                            <td><%=dienthoai.camera_truoc%></td>
                        </tr>
                        <tr>
                            <td style="color: black;">CPU</td>
                            <td><%=dienthoai.cpu%></td>
                        </tr>
                        <tr>
                            <td style="color: black;">RAM</td>
                            <td><%=dienthoai.ram%></td>
                        </tr>
                        <tr>
                            <td style="color: black;white-space: nowrap;">Bộ nhớ trong</td>
                            <td><%=dienthoai.bo_nho_trong%></td>
                        </tr>
                        <tr>
                            <td style="color: black;">Thẻ sim</td>
                            <td><%=dienthoai.the_sim%></td>
                        </tr>
                        <tr>
                            <td style="color: black;white-space: nowrap;">Dung lượng pin</td>
                            <td><%=dienthoai.dung_luong_pin%></td>
                        </tr>

                    </tbody>
                </table>

            </div>
            <div class="col-lg-8 col-sm-12 col-xs-12" style="text-align: justify;">
                <h3 class="bar-xanh">Chi tiết sản phẩm</h3>
                <% if(bai_viet){ %>
                <%- bai_viet %>
                <% } %>
            </div>

            <div class="col-lg-4 col-sm-12 col-xs-12 visible-lg">
                <h3 class="bar-xanh">Thông số kĩ thuật</h3>
                <table class="table">
                    <tbody>
                        <tr>
                            <td style="color: black;white-space: nowrap;">Màn hình</td>
                            <td><%=dienthoai.man_hinh%></td>
                        </tr>
                        <tr>
                            <td style="color: black;white-space: nowrap;">Hệ điều hành</td>
                            <td><%=dienthoai.he_dieu_hanh%></td>
                        </tr>
                        <tr>
                            <td style="color: black;">Camera sau</td>
                            <td><%=dienthoai.camera_sau%></td>
                        </tr>
                        <tr>
                            <td style="color: black;">Camera trước</td>
                            <td><%=dienthoai.camera_truoc%></td>
                        </tr>
                        <tr>
                            <td style="color: black;">CPU</td>
                            <td><%=dienthoai.cpu%></td>
                        </tr>
                        <tr>
                            <td style="color: black;">RAM</td>
                            <td><%=dienthoai.ram%></td>
                        </tr>
                        <tr>
                            <td style="color: black;white-space: nowrap;">Bộ nhớ trong</td>
                            <td><%=dienthoai.bo_nho_trong%></td>
                        </tr>
                        <tr>
                            <td style="color: black;">Thẻ sim</td>
                            <td><%=dienthoai.the_sim%></td>
                        </tr>
                        <tr>
                            <td style="color: black;white-space: nowrap;">Dung lượng pin</td>
                            <td><%=dienthoai.dung_luong_pin%></td>
                        </tr>

                    </tbody>
                </table>

            </div>
        </div>
        <div class="row binhluan">
            <h3>Leave a reply</h3>

            <div class="form-group">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="">Họ tên</label>
                            <input type="text" class="form-control input-bl" id="ho_ten" name="ho_ten" required
                                placeholder="Họ tên(bắt buộc)">
                        </div>
                        <div class="col-sm-4">
                            <label for="">Email</label>
                            <input type="email" class="form-control input-bl" id="email" name="email"
                                placeholder="Email(không bắt buộc)">
                        </div>
                        <div class="col-sm-4">
                            <label for="">SĐT</label>
                            <input type="text" class="form-control input-bl" id="sdt" name="sdt"
                                placeholder="SĐT(không bắt buộc)">
                        </div>
                        <div class="col-sm-6">
                            <label for="">Viết bình luận</label>
                            <textarea style="display:block;margin-bottom:20px" class="form-control" id="noi_dung"
                                name="noi_dung" rows="5" cols="" required placeholder="bình luận(bắt buộc)"></textarea>
                            <button class="btn btn-success" id='submit' style="margin-bottom:20px">Gửi</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row" style="color: black;margin-bottom: 20px;" id="danhgia">
            <h3 style="border-bottom:1px solid black;padding-left: 20px;">Đánh giá</h3>
            <% if(binhluan){ %>
            <% for(var i=0;i<binhluan.length;i++){ %>
            <div class="col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong><%= binhluan[i].ho_ten %></strong>
                        <!-- <span class="text-muted">
                                    &#160
                                    <%= binhluan[i].ngay_gio.getHours() %> :
                                    <%= binhluan[i].ngay_gio.getMinutes() %>&#160 -
                                    <%= binhluan[i].ngay_gio.getDate() %> /
                                    <%= binhluan[i].ngay_gio.getMonth() + 1%> /
                                    <%= binhluan[i].ngay_gio.getFullYear()%>
                                </span> -->
                    </div>
                    <div class="panel-body">
                        <%= binhluan[i].noi_dung %>
                    </div>
                </div>
            </div>

            <% } %>
            <% } %>
        </div>
    </div>
    <!-- footer -->
    <%- include('footer'); -%>
    <!-- end footer -->
    <script>
        function validateName(inputName) {
            return inputName.length > 0;
        }
        function validateContent(inputContent) {
            return inputContent.length > 10;
        }
        
        
        $('#submit').click(function () {
            var check_ho_ten = true;
            var check_noi_dung = true;
            if (!validateName($('#ho_ten').val().trim())) {
            console.log(validateName($('#ho_ten').val().trim()));
            alert("Vui lòng nhập tên");
            check_ho_ten= false;
        }
        if (!validateContent($('#noi_dung').val().trim())) {
            console.log(validateName($('#ho_ten').val().trim()));
            alert("Vui lòng nhập nội dung có ít nhất 10 kí tự");
            check_noi_dung = false;
        }
            if (check_ho_ten && check_noi_dung) {
                $.ajax({
                    type: 'post',
                    url: '/dienthoai/<%=dienthoai.phone_id%>',
                    data: {
                        ho_ten: $('#ho_ten').val(),
                        email: $('#email').val(),
                        sdt: $('#sdt').val(),
                        noi_dung: $('#noi_dung').val()
                    }
                }).done(function (binhluan) {
                    var noidung = `<div class="col-sm-12 col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <strong>${binhluan.ho_ten}</strong>
                            </div>
                            <div class="panel-body">
                                ${binhluan.noi_dung}
                            </div>
                        </div>
                    </div> `
                    $('#danhgia').append(noidung);

                })
            }
        })
    </script>
    <script src="/js/menumaker.js" type="text/javascript"></script>
</body>

</html>