    <link href="./css/owl.carousel.css" rel="stylesheet">
    <link href="./css/owl.theme.default.css" rel="stylesheet">

    <link href="./css/font-awesome.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="/images/favicon.ico">

</head>

<body>
    <%- include('header'); -%>
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li><a href="/">Trang chủ</a></li>
                            <li><a href="/"></a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-xs-12">
                <iframe width="100%" height="315" src="https://www.youtube.com/embed/Tcm5dT-HSf8" frameborder="0"
                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            </div>
            <div class="col-sm-6 col-xs-12">
                <iframe width="100%" height="315" src="https://www.youtube.com/embed/e9vK8k6rMNA" frameborder="0"
                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            </div>
        </div>

    </div>
    <div class="container slide" style="margin-top: 20px;">
        <div class="row">
            <div class="col-sm-8 col-xs-12">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img
                                src="https://didongviet.vn/pub/media/magestore/bannerslider/images/6/9/690x350_2__1.jpg">
                        </div>

                        <div class="item">
                            <img
                                src="https://didongviet.vn/pub/media/magestore/bannerslider/images/6/9/690x350_1__4.jpg">
                        </div>

                        <div class="item">
                            <img
                                src="https://didongviet.vn/pub/media/magestore/bannerslider/images/6/9/690x350-galaxy-note-10-lite-didongviet.jpg">
                        </div>
                    </div>
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-sm-4 hidden-xs">
                <div class="row">
                    <div class="col-xs-12">
                        <img src="https://didongviet.vn/pub/media/magestore/bannerslider/images/2/7/275x129_12_.jpg"
                            alt="">
                    </div>
                    <div class="col-xs-12">
                        <img src="https://didongviet.vn/pub/media/magestore/bannerslider/images/2/7/270x129.jpg" alt=""
                            style="margin-top: 43px;">
                    </div>

                </div>
            </div>
        </div>
    </div>



    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="box">
                    <div class="box-head">
                        <h3 class="head-title">Điện thoại mới nhất</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="product-carousel">
            <div class="box-body">
                <div class="row">
                    <div class="owl-carousel owl-two owl-theme" id="latest-dienthoai">
                        <% for(var i=0;i<dienthoai.length;i++){ %>
                        <a href="/dienthoai/<%=dienthoai[i].phone_id%>">
                            <div class="hinhanh" style="height:180px;text-align: center;">
                                <img class="card-img-top" src="<%=dienthoai[i].hinh_anh%>" alt="Card image cap"
                                    style="width: 150px;">
                            </div>
                            <div class="card-body" style="margin-left:20px">
                                <h5 class="card-title" style="font-size: 20px;font-weight: 500;">
                                    <%=dienthoai[i].name%></h5>
                                <p class="card-text" style="color:red;font-weight: 500;">
                                    <%=dienthoai[i].gia_hien_thi%></p>
                                <p class="card-text" style="overflow:hidden;font-size:15px;color:blue;margin-top:-15px">
                                    <%=dienthoai[i].promotion%></p>
                            </div>
                        </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="box">
                    <div class="box-head">
                        <h3 class="head-title">Laptop mới nhất</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="product-carousel">
            <div class="box-body">
                <div class="row">
                    <div class="owl-carousel owl-two owl-theme" id="latest-laptop">
                        <!-- code in here -->

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bg-default pdt40 pdb40">
        <div class="container">
            <div class="row">

                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="feature-left">
                        <div class="feature-outline-icon">
                            <i class="fa fa-credit-card"></i>
                        </div>
                        <div class="feature-content">
