<!doctype html>
<html lang="en">
  <head>
    <title>Đơn hàng</title>
    <link rel="shortcut icon" href="/images/favicon.ico">
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="/css/admin.css">
<script src="/js/admin.js"></script>
  </head>
  <body>
    <%- include('admin-navbar'); -%>
    <!-- breadcum -->
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
      <li class="breadcrumb-item"><a href="#">Đơn hàng</a></li>
  </ol>
    <div class="container-fluid">
        <div class="mb-3 mt-3">
          <h1 class="d-inline">Đơn hàng</h1>
        </div>
        
        <table class="table" id="table1">
          <thead>
            <tr>
              <th scope="col">STT</th>
              <th scope="col">Tên khách hàng</th>
              <th scope="col">SĐT</th>
              <th scope="col">Email</th>
              <th scope="col">Trạng thái đơn hàng</th>
              <th scope="col">Chức năng</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0;i<donhang.length;i++){ %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= donhang[i].ttkh.ho_ten %></td>
              <td><%= donhang[i].ttkh.sdt %></td>
              <td><%= donhang[i].ttkh.email %></td>
              <td><%= donhang[i].trang_thai %></td>
              <td>
                <a href="/admin/donhang/chitiet/<%= donhang[i]._id %>" class="btn btn-success">Chi tiết đơn</a>
                <a href="/admin/donhang/huy/<%= donhang[i]._id %>" class="btn btn-danger">Huỷ đơn</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div> 
  </body>
</html>